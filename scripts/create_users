touch ~/.pgpass

psql --username=postgres -f ./scripts/sql/create_user_admin.sql
echo "*:5432:*:super_admin:12345" >> ~/.pgpass

psql --username=super_admin -f ./scripts/sql/create_user_github.sql
echo "*:5432:github:github:12345" >> ~/.pgpass

chmod 600 ~/.pgpass

psql --username=github -c "SELECT 'You are now connected to github account.';"