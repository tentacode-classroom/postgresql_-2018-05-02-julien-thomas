psql --username=super_admin -c "ALTER SYSTEM SET listen_addresses = '*';"
psql --username=super_admin -c "SELECT pg_reload_conf();"

sudo apt install virtualenv python3-pip libpq-dev python3-dev -y

virtualenv -p python3 pgadmin4
source ~/pgadmin4/bin/activate

pip3 install https://ftp.postgresql.org/pub/pgadmin/pgadmin4/v4.8/pip/pgadmin4-4.8-py2.py3-none-any.whl


sudo echo "import os
DATA_DIR = os.path.realpath(os.path.expanduser(u'~/.pgadmin/'))
LOG_FILE = os.path.join(DATA_DIR, 'pgadmin4.log')
SQLITE_PATH = os.path.join(DATA_DIR, 'pgadmin4.db')
SESSION_DB_PATH = os.path.join(DATA_DIR, 'sessions')
STORAGE_DIR = os.path.join(DATA_DIR, 'storage')
SERVER_MODE = False" > ~/pgadmin4/lib/python3.5/site-packages/pgadmin4/config_local.py


echo "run python3 ~/pgadmin4/lib/python3.5/site-packages/pgadmin4/pgAdmin4.py to launch pgAdmin"